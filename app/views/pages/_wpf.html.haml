%hr

%row#wpf
  .large-9.columns
    %p Get it from nuget
    %pre
      %code{'data-language' => 'csharp'}
        :preserve
          PM> Install-Package BugFreak.WPF

    %p Add the configuration section to your app.config
    %pre
      %code{'data-language' => 'html'}
        :config
          <configSections>
            <section name="BugFreak" type="System.Configuration.AppSettingsSection, System.Configuration, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" />
          </configSections>

          <BugFreak>
            <add key="ApiKey" value="#{api_key(current_user)}"/>
            <add key="Token" value="#{token}"/>
          </BugFreak>

    %p Add hook code in App.xaml.cs
    %pre
      %code{'data-language' => 'csharp'}
        :preserve
          public partial class App
          {
            using BugFreak.WPF;

            public static void Main()
            {
              // Hook
              AgileReporter.Hook();

              var application = new App();
              application.InitializeComponent();
              application.Run();
            }
          }

