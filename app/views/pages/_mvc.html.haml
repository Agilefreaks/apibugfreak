%row#mvc
  .large-9.columns
    %p Get it from nuget
    %pre
      %code{'data-language' => 'csharp'}
        :preserve
          PM> Install-Package BugFreak.MVC3

    %p And hook it up in your Global.asax.cs
    %pre
      %code{'data-language' => 'charp'}
        :preserve
          using BugFreak;

          public class MvcApplication : System.Web.HttpApplication
          {
            protected void Application_Start()
            {
              BuBugFreak.Hook("#{api_key(current_user)}", "#{token}");
            }
          }
